{
  "version": "0.0.1",
  "name": "Amazon Reader Translate",
  "short_name": "AR Translate",
  "manifest_version": 2,
  "description": "Translate directly from amazon reader",
  "author": "Moti Korets",
  "content_security_policy": "default-src 'self'; script-src 'self';",
   "content_scripts": [{
      "matches": [
        "https://read.amazon.com/"
      ],
      "js": [
        "translate.js"
      ],
      "run_at": "document_end"
    }
   ],

  "permissions": [
    "https://read.amazon.com/"
  ]
}

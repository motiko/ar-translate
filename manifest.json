{
  "version": "0.0.2",
  "name": "Kindle Cloud Reader Translate",
  "short_name": "KCR Translate",
  "manifest_version": 2,
  "description": "Translate directly from kindle cloud reader reader",
  "author": "Moti Korets",
  "content_security_policy": "default-src 'self'; script-src 'self';",
  "icons": {
    "16": "img/book_16.png",
    "128": "img/book_128.png"
  },
  "browser_action": {
    "default_icon": "img/book_16.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["browser-polyfill-0.2.1.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://read.amazon.com/"],
      "js": ["browser-polyfill-0.2.1.js", "index.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": ["https://read.amazon.com/", "storage"]
}
